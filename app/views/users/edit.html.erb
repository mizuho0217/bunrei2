<%= @user.name %> さんのプロフィール編集ページです。

<div class="col-lg-12">
<%= form_for current_user do |f| %>
  <h2><%= @user.name %> さんの登録情報</h2>
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :name, placeholder: "お名前", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "送信", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
  </div>
</div>
</div>