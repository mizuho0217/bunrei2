<%= @user.name %> さんのプロフィール編集ページです。

<div class="col-lg-12">
<%= form_for current_user do |f| %>
  <h2><%= @user.name %> さんの登録情報</h2>
      <div class="form-group">
        <%= f.label :お名前 %><br />
        <%= f.text_field :name, placeholder: "お名前", class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.label :メールアドレス %><br />
      <%= f.text_field :email, placeholder: "メールアドレス", class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.submit "編集を完了する", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
  </div>
</div>
</div>