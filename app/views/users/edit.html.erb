<%= @user.name %> さんのプロフィール編集ページです。
<div class ="container">
<div class="col-lg-12">
<%= form_for current_user do |f| %>
  <h2><%= @user.name %> さんの登録情報</h2>
      <h3>プロフィール画像</h3>
        <%= image_tag @user.avatar.url(:medium) %><br />
                                                  <br />
      <div class="form-group">
        <%= f.file_field :avatar, class: "form-control", placeholder: "画像アップロード" %>
      </div><br />
     
      <h3>登録情報</h3>
      <div class="form-group">
        <%= f.label :お名前 %><br />
        <%= f.text_field :name, placeholder: "お名前", class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.label :メールアドレス %><br />
      <%= f.text_field :email, placeholder: "メールアドレス", class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.label :自己紹介 %><br />
      <%= f.text_field :self_intro, placeholder: "自己紹介", class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.label :ホームページ・ブログ %><br />
      <%= f.text_field :hp_blog, placeholder: "URL (ブログ・ホームページなど)", class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.label :Facebook %><br />
      <%= f.text_field :facebook, placeholder: "Facebook", class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.label :Twitter %><br />
      <%= f.text_field :twitter, placeholder: "Twitter", class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.label :Instagram %><br />
      <%= f.text_field :instagram, placeholder: "Instagram", class: "form-control" %>
      </div><br />
      
      <div class="form-group">
        <%= f.submit "編集を完了する", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
  </div>
</div>
</div>